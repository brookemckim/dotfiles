# shortcut to this dotfiles path is $dots
export DOTS=$HOME/.dotfiles

# source every .sh file in this rep
CONFIGS=$DOTS/**/*.sh
for config_file in $CONFIGS
do
 source $config_file
done

chmod +x $DOTS/bin/*

# Default Editor
export EDITOR=vi

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
